<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.dtmining.latte.mk.ui.sub_delegates.views.SwipeListLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/item_child_medicine_plan_sll"
        android:background="@color/Gray0"

        android:layout_gravity="center_vertical"
        android:layout_height="40dp">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_btn_item_child_medicine_plan_change"
                android:layout_width="80dp"
                android:focusable="false"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:background="@color/Assertive"
                android:gravity="center"
                android:text="修改" />
            <TextView
                android:id="@+id/tv_btn_item_child_medicine_plan_delete"
                android:layout_width="80dp"
                android:focusable="false"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:background="@color/Assertive"
                android:gravity="center"
                android:text="删除" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_medicine_mine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_medicine_plan_medicine_name"
                android:text="感冒胶囊"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <TextView
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp" />

            <TextView
                android:text="单次服用"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_medicine_plan_medicine_count"
                android:text="2"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

        </LinearLayout>

    </com.dtmining.latte.mk.ui.sub_delegates.views.SwipeListLayout>

</LinearLayout>