<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Green">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请您填写登陆信息"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="56dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:src="@mipmap/indexlog" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="80dp"
                    android:text="手机号"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/edit_sign_in_phone"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:layout_height="40dp" />

            </android.support.v7.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1px" />


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="80dp"
                    android:text="密码"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp" />

                <EditText
                    android:id="@+id/edit_sign_in_password"
                    android:hint="请输入密码"
                    android:textSize="15sp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp" />

            </android.support.v7.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/black"
                android:layout_height="1px" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_link_sign_up"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:text="用户注册"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_link_forget_password"
                    android:layout_width="80dp"
                    android:text="忘记密码?"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/Green"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp" />
            </android.support.v7.widget.LinearLayoutCompat>




            <Button
                android:id="@+id/btn_sign_in"
                android:text="登陆"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/btn_bg"
                android:layout_height="40dp" />

            <TextView
                android:layout_marginTop="30dp"
                android:text="第三方登陆"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1">
                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/icon_sign_in_wechat"
                        android:text="{icon-wechat}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#04b00f"
                        android:textSize="40sp"
                        android:gravity="center"
                        />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1">
                    <com.joanzapata.iconify.widget.IconTextView
                        android:id="@+id/icon_sign_in_qq"
                        android:text="{icon-qq}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#359FED"
                        android:textSize="40sp"
                        android:gravity="center"
                        />
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>
</android.support.v7.widget.LinearLayoutCompat>