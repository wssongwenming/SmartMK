<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
   >
    <android.support.v7.widget.AppCompatTextView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:text="添加药箱"
        android:textSize="18sp"

        android:gravity="center_vertical"
        android:layout_height="40dp" />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btn_add_box_by_hand"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bind_handler"
        />


    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_add_box_by_scan"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/bind_scan"
        android:layout_height="60dp"
        />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_delete_box"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:background="@drawable/delete_handler"
        android:layout_height="60dp"
        />
</LinearLayout>
