<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Gray2">
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:text="用药汇总"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_height="30dp" />
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        >
        <android.support.v7.widget.AppCompatButton
            android:layout_margin="5dp"
            android:id="@+id/btn_medicine_summary_begintime"
            android:layout_weight="3"
            android:text="开始时间"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/Gray2"
            android:textSize="14sp"

            android:background="@drawable/stroke_edit"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <android.support.v7.widget.AppCompatButton

        android:id="@+id/btn_medicine_summary_endtime"
            android:layout_weight="3"
            android:text="结束时间"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/Gray2"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:background="@drawable/stroke_edit"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <android.support.v7.widget.AppCompatButton

        android:id="@+id/btn_summary_confirm"
            android:layout_weight="2"
            android:text="确定"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:background="@drawable/area_radis"
            android:layout_width="0dp"
            android:layout_height="30dp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.RecyclerView
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/rv_medicine_summary"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</android.support.v7.widget.LinearLayoutCompat>
