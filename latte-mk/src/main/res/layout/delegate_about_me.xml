<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    android:fadeScrollbars="false"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/Green"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="20dp"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/headicon"
                    android:layout_width="80dp"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/app_user_name"
                        android:gravity="center_vertical"
                        android:text="用户"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="0dp">
                        <TextView
                            android:gravity="center_vertical"
                            android:text="积分:"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <TextView
                            android:paddingLeft="10dp"
                            android:textColor="@color/white"
                            android:text="50"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/add_box"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/area"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@drawable/self_add"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="添加药箱"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/right_arrow"
                    android:layout_height="10dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:background="@color/Gray2"
                android:layout_height="1dp" />


            <!--我的药箱-->
            <LinearLayout
                android:id="@+id/minebox"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/area"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@drawable/self_mine"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的药箱"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow"
                    android:layout_height="10dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/Gray2"
                android:layout_height="1dp" />

            <!--用药记录-->
            <LinearLayout
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/area"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@drawable/self_history"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="用药记录"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow"
                    android:layout_height="10dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/Gray2"
                android:layout_height="1dp" />

            <!--用户消息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/area"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@drawable/self_message"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="用户消息"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow"
                    android:layout_height="10dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/Gray2"
                android:layout_height="1dp" />
            <!--反馈-->

            <LinearLayout
                android:id="@+id/response"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/area"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@drawable/self_reward"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="反馈"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow"
                    android:layout_height="10dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/Gray2"
                android:layout_height="1dp" />

            <!--清除缓存-->

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/area"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@drawable/self_clean"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="清除缓存"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow"
                    android:layout_height="10dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:background="@color/Gray2"
                android:layout_height="1dp" />


            <!--推出登陆-->

            <LinearLayout
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/area"
                android:layout_height="60dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:background="@drawable/self_exit"
                    android:layout_height="25dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="退出登陆"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/right_arrow"
                    android:layout_height="10dp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>