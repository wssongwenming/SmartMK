    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="60dp">
        <TextView
            android:layout_width="90dp"
            android:text="设置铃声"
            android:gravity="center_vertical"
            android:layout_height="40dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:text="提醒音乐"
            android:background="@drawable/stroke_edit"
            android:layout_height="40dp"
            android:id="@+id/btn_delegate_medicine_take_plan_add_by_drug_set_music"
            />
    </LinearLayout>

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btn_delegate_medicine_take_plan_add_by_drug_confirm"
        android:layout_width="match_parent"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@drawable/area_radis"
        android:layout_height="wrap_content" />

