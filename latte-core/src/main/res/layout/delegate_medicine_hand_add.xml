<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:text="药品信息"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="match_parent"
            android:background="@color/Gray"
            android:layout_height="1px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:text="药品名称"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/edit_medicine_hand_add_medicine_name"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="@color/Gray1"
                android:hint="请填写药品名称"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:background="@drawable/stroke_edit"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="0dp"
                android:text="生产日期"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/btn_medicine_hand_add_please_select_production_time"
                android:layout_weight="3"
                android:text="请选择生产日期"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/Gray1"
                android:textSize="14sp"

                android:background="@drawable/stroke_edit"
                android:layout_width="0dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="过期时间"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="40dp" />
            <Button
                android:id="@+id/btn_medicine_hand_add_please_select_overdue_time"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:text="请选择过期时间"
                android:paddingLeft="20dp"
                android:textSize="14sp"
                android:textColor="@color/Gray1"
                android:background="@drawable/stroke_edit"
                android:layout_height="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="数量"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="40dp" />
            <EditText
                android:id="@+id/edit_medicine_hand_add_medicine_count"
                android:layout_weight="3"
                android:paddingLeft="20dp"
                android:hint="请填写数量"
                android:inputType="number"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:background="@drawable/stroke_edit"
                android:layout_height="40dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="@color/Gray0"
            android:layout_height="10dp" />




        <LinearLayout
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="外包装"
                android:gravity="center_vertical"
                android:layout_height="40dp" />

            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/appearance"
                android:background="@color/Gray0"
                android:gravity="center_vertical"
                android:layout_width="200dp"
                android:layout_height="120dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:background="@color/Gray0"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="药箱"
                android:gravity="center_vertical"
                android:layout_height="40dp" />

            <Spinner
                android:id="@+id/medicine_hand_add_boxid"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="40dp">

            </Spinner>

        </LinearLayout>

        <Button
            android:id="@+id/medicine_hand_add_submit"
            android:layout_margin="20dp"
            android:text="提交"
            android:textColor="@color/white"
            android:background="@drawable/area_radis"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


    </LinearLayout>





</ScrollView>